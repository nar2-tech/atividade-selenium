from selenium import webdriver
from selenium.webdriver.common.by import By
from selenium.webdriver.common.keys import Keys
from selenium.webdriver.common.action_chains import ActionChains
import time

driver = webdriver.Chrome()

driver.get("https://pt.wikipedia.org/wiki/Educa%C3%A7%C3%A3o")
time.sleep(2)

titulo = driver.find_element(By.CSS_SELECTOR, "h1").text
print("TÍTULO DA PÁGINA:")
print(titulo)

paragrafos = driver.find_elements(By.CSS_SELECTOR, "p")
print("\nPARÁGRAFOS:")
for p in paragrafos[:3]:
    print("-", p.text)

campo_busca = driver.find_element(By.CSS_SELECTOR, "input")
campo_busca.click()
campo_busca.send_keys("Python")
campo_busca.send_keys(Keys.TAB)

actions = ActionChains(driver)
actions.key_down(Keys.CONTROL).send_keys('a').send_keys('c').key_up(Keys.CONTROL).perform()

time.sleep(3)
driver.quit()
